{
  "name": "wp-plugin-ci",
  "version": "1.0.0",
  "description": "GitHub Action to run PHP tests in a pre-installed and pre-configured Wordpress plugin environment",
  "homepage": "https://github.com/impressible-wp/wordpress-plugin-ci#readme",
  "bugs": {
    "url": "https://github.com/impressible-wp/wordpress-plugin-ci/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/impressible-wp/wordpress-plugin-ci.git"
  },
  "license": "MIT",
  "author": "Koala Yeung <koalay@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts --out dist --minify",
    "dev": "ncc build src/index.ts --out dist --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "package": "npm run all && git add dist/",
    "all": "npm run format && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "github-action",
    "wordpress",
    "plugin",
    "ci",
    "testing",
    "php"
  ],
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=20"
  }
}
