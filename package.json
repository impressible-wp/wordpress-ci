{
  "name": "wordpress-ci",
  "version": "1.0.0",
  "description": "A GitHub Action for doing integration test and acceptance test with Wordpress",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "postinstall": "git config get core.hooksPath >/dev/null || git config set core.hooksPath .githooks",
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "dev": "ncc build src/index.ts -o dist --source-map --license licenses.txt --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "all": "npm run format && npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/impressible-wp/wordpress-ci.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "wordpress",
    "plugin",
    "ci"
  ],
  "author": "Impressible",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "ansi-colors": "^4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
